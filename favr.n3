@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix vann: <http://purl.org/vocab/vann/> .
@prefix dc: <http://purl.org/dc/elements/1.1/> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xs: <http://www.w3.org/2001/XMLSchema#> .
@prefix favr: <https://www.ludov.ca/index.php/en/observation/graphical-technologies/game-favr#> .

<https://www.ludov.ca/index.php/en/observation/graphical-technologies/game-favr> a owl:Ontology ;
	dc:title "FAVR" ;
	dc:description "Framework for the Analysis of Visual Representation in Video Games. This ontology is based on the game FAVR, a  model  that allows any game's visual representation to be described and discussed through a common  frame  and  vocabulary." ;
    vann:preferredNamespacePrefix "favr";
    vann:preferredNamespaceUri <http://xmlns.com/favr/0.1/>;
	dcterms:created "2023-07-17"^^xs:date ;
	dcterms:modified "2023-07-17"^^xs:date ;
	dc:creator "Arsenault, Dominic, Pierre-Marc Côté, Audrey Larochelle" ;
	dc:contributor "Adrian Demleitner" .

favr:Mode a rdfs:Class ;
	rdfs:label "Mode"@en ;
	rdfs:comment "Visual modes are not an inherent reality awaiting discovery in games, but are created by the analyst for the purpose of discussing and analyzing games."@en ;
	favr:hasOcularization favr:Ocularization ;
	favr:hasFramingMechanism favr:FramingMechanism ;
	rdfs:isDefinedBy <https://www.ludov.ca/index.php/en/observation/graphical-technologies/game-favr> .

favr:Space a rdfs:Class ;
	rdfs:label "Space"@en ;
	rdfs:comment "Tangible, Intangible, Negative."@en ;
	rdfs:isDefinedBy <https://www.ludov.ca/index.php/en/observation/graphical-technologies/game-favr> .

favr:NegativeSpace a rdfs:Class ;
	rdfs:label "Negative space"@en ;
	rdfs:subClassOf favr:Space ;
	rdfs:isDefinedBy <https://www.ludov.ca/index.php/en/observation/graphical-technologies/game-favr> .

favr:IntangibleSpace a rdfs:Class ;
	rdfs:label "Intangible space"@en ;
	rdfs:subClassOf favr:Space ;
	rdfs:isDefinedBy <https://www.ludov.ca/index.php/en/observation/graphical-technologies/game-favr> .

favr:TangibleSpace a rdfs:Class ;
	rdfs:label "Tangible space"@en ;
	rdfs:subClassOf favr:Space ;
	favr:hasTriplanarConstruction favr:TriplanarConstruction ;
	favr:hasGraphicalMaterial favr:GraphicalMaterial ;
	favr:hasProjectionMethod favr:ProjectionMethod ;
	favr:hasAngleOfProjection favr:AngleOfProjection ;
	rdfs:isDefinedBy <https://www.ludov.ca/index.php/en/observation/graphical-technologies/game-favr> .

favr:Agent a rdfs:Class ;
	rdfs:label "Agent"@en ;
	rdfs:comment "Object or characters that can act or be acted on."@en ;
	rdfs:subClassOf favr:TangibleSpace ;
	rdfs:isDefinedBy <https://www.ludov.ca/index.php/en/observation/graphical-technologies/game-favr> .

favr:InGame a rdfs:Class ;
	rdfs:label "In-game environment"@en ;
	rdfs:comment ""@en ;
	rdfs:subClassOf favr:TangibleSpace ;
	rdfs:isDefinedBy <https://www.ludov.ca/index.php/en/observation/graphical-technologies/game-favr> .

favr:OffGame a rdfs:Class ;
	rdfs:label "Off-game environment"@en ;
	rdfs:comment ""@en ;
	rdfs:subClassOf favr:TangibleSpace ;
	rdfs:isDefinedBy <https://www.ludov.ca/index.php/en/observation/graphical-technologies/game-favr> .

favr:hasTriplanarConstruction a rdf:Property ;
	rdfs:label "Tri-planar construction"@en ;
	rdfs:domain favr:TangibleSpace ; # would love to limit this to the three subclasses of favr:TangibleSpace
	rdfs:isDefinedBy <https://www.ludov.ca/index.php/en/observation/graphical-technologies/game-favr> .

# all the properties have pre-defined options; can i build those into the ontology?

favr:hasOcularization a rdf:Property ;
	rdfs:label "Ocularization"@en ;
	rdfs:isDefinedBy <https://www.ludov.ca/index.php/en/observation/graphical-technologies/game-favr> .

favr:hasFramingMechanism a rdf:Property ;
	rdfs:label "Framing mechanism"@en ;
	rdfs:isDefinedBy <https://www.ludov.ca/index.php/en/observation/graphical-technologies/game-favr> .

favr:hasGraphicalMaterial a rdf:Property ;
	rdfs:label "Graphical material"@en ;
	rdfs:isDefinedBy <https://www.ludov.ca/index.php/en/observation/graphical-technologies/game-favr> .

favr:hasProjectionMethod a rdf:Property ;
	rdfs:label "Projection method"@en ;
	rdfs:isDefinedBy <https://www.ludov.ca/index.php/en/observation/graphical-technologies/game-favr> .

favr:hasAngleOfProjection a rdf:Property ;
	rdfs:label "Angle of projection"@en ;
	rdfs:isDefinedBy <https://www.ludov.ca/index.php/en/observation/graphical-technologies/game-favr> .